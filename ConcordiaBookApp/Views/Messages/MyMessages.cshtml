<div class="row">
    <div ng-controller="MyMessageController">
        <div ng-show="isLoading" class="loader">loader...</div>
        <div ng-hide="isLoading">
            <h1>My Messages</h1>
            <div ng-repeat="message in myMessages">
                <h5>Subject line</h5>
                <div>{{message.SubjectLine}}</div>
                <h5>Message Body</h5>
                <div>{{message.MessageBody}}</div>
                <h5>From</h5>
                <div>{{message.FromName}}</div>
                <button class="btn btn-primary">Reply</button>
                <hr />
            </div>
