<div class="row">
    <div ng-controller="MyMessageController">
        <div ng-show="isLoading" class="loader">loader...</div>
        <div ng-hide="isLoading">
            <form novalidate class="simple-form">
                <label for="title">Subject: <input type="text" id="title" class="oneColumn" ng-model="Message.Title" /></label><br />
                <label for="messageBody" title="If more then one name is on the book, type in the first name that appears">Message: <input type="text" id="messageBody" class="oneColumn" ng-model="Message.MessageBody" /></label><br />
                <input type="submit" ng-click="reply(Message)" value="Send" />
            </form>
        </div>
    </div>
</div>
