<div class="row">
    <div ng-controller="MyMessageController">
        <div ng-show="isLoading" class="loader">loader...</div>
        <div ng-hide="isLoading">
            <h1>My Messages</h1>
            <div ng-repeat="message in myMessages">
                <h5 style="margin-bottom: 0px;">Subject</h5>
                <div class="well-sm" style="background-color: lightgray; margin-top: 0px; margin-bottom: 5px;">{{message.SubjectLine}}</div>
                <h5 style="margin-bottom: 0px;">Message</h5>
                <div class="well-lg" style="background-color: lightgray; margin-bottom: 15px; margin-top: 0px;">
                    {{message.MessageBody}}
                </div>
                <h5>From: {{message.FromName}}</h5>
                <button class="btn btn-primary" ng-click="reply(message.MessageThreadID)">Reply</button>
                <hr />
            </div>

        </div>
    </div>
</div>
